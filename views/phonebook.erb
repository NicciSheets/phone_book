.dropdown:hover .dropdown-content {
    display: block;
}

ul input[type=text] {
  padding: 4px;
  font-size: 17px;
  border: none;
}

ul .search-container button {
  float: right;
  padding: 6px 10px;
  background: #ddd;
  font-size: 17px;
  border: none;
  cursor: pointer;
}

ul .search-container button:hover {
  background: #ccc;
}
table {
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
    border: 1px solid #ddd;
}

th, td {
    text-align: left;
    padding: 16px;
}

tr:nth-child(even) {
    background-color: #f2f2f2
}

</style>
</head>
<body>

<h1>Contacts</h1>

<ul>
  <li class="newcontact"><a href="/new_contact">Add Contact</a></li>
  <li class="dropdown">
    <a href="javascript:void(0)" class="dropbtn">Useful Links</a>
    <div class="dropdown-content">
      <a href="https://www.whitepages.com/">WhitePages</a>
      <a href="https://www.mapquest.com/">MapQuest</a>
      <a href="https://www.google.com/">Google</a>
    </div>
  </li>
  <li class="logout"><a href="/sessions/logout" style="color:red">Log Out</a></li>
  <li style="float:right">
  	<a div class="search-container">
      <input type="text" placeholder="Search Contacts" name="search" id="myInput" onkeyup="myFunction()">
      <button type="submit"><i class="fa fa-search"></i></button>
  	</div></a>
  </li>
</ul>
<br>


<form method="post" action="delete_con">
	
	<table id="myTable">
		<tr>
			<th>Name</th>
			<th>Phone</th>
			<th>Address</th>
			<th>Options</th>
			<th></th>
		</tr>
	<% res_arr.each do |r|%>
	  <tr>
	    <td><div class="row_data" id="click" contenteditable="true" name="names2"><%= r['names']%></td>
	    <td><div class="row_data" id="click" contenteditable="true" name="phone2"><%= r['phone']%></td>
	    <td><div class="row_data" id="click" contenteditable="true" name="address2"><%= r['address']%></td>
	    <!-- <td><span class="btn_edit" > <a href="#" class="btn btn-link " row_id="row_id" >Edit</a> </span>
		  Save and Cancel button only show when Edit is clicked -->
		<!-- <span class="btn_save"> <a href="#" class="btn btn-link"  row_id="row_id"> Save</a> | </span>
		<span class="btn_cancel"> <a href="#" class="btn btn-link" row_id="row_id"> Cancel</a> | </span> -->
		<!-- </td> -->
		<td><input type="checkbox" name="row"></td>
	  </tr>
		 <% end%>
	</table>
	<input type="submit" value="Submit">
</form>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
</body>

<script>

$(document).find('.btn_save').hide();
$(document).find('.btn_cancel').hide(); 

$(document).on('#click', '.row_data', function(event) 
{
	event.preventDefault(); 

	if($(this).attr('id') == 'button')
	{
		return false; 
	}

	//make div editable
	$(this).closest('div').attr('contenteditable', 'true');
	//add bg css
	$(this).addClass('bg-warning').css('padding','5px');

	$(this).focus();
})	

$(document).on('#click', '.btn_edit', function(event) 
{
	event.preventDefault();
	var tbl_row = $(this).closest('tr');

	var row_id = tbl_row.attr('row_id');

	tbl_row.find('.btn_save').show();
	tbl_row.find('.btn_cancel').show();

	//hide edit button
	tbl_row.find('.btn_edit').hide(); 

	//make the whole row editable
	tbl_row.find('.row_data')
	.attr('contenteditable', 'true')
	.attr('edit_type', 'button')
	.addClass('bg-warning')
	.css('padding','3px')

	//--->add the original entry > start
	tbl_row.find('.row_data').each(function(index, val) 
	{  
		//this will help in case user decided to click on cancel button
		$(this).attr('original_entry', $(this).html());
	}); 		
	//--->add the original entry > end

});

function myFunction() {
  var input, filter, table, tr, td, i;
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  table = document.getElementById("myTable");
  tr = table.getElementsByTagName("tr");
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[0];
    if (td) {
      if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }       
  }
}

</script>